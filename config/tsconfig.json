{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "es6",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "allowJs": true,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true,  // allow default imports for modules without default export
    "rootDirs": ["src"]
  }
}
