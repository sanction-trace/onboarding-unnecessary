{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "module": "es6",
    "outDir": "../dist",
    "noImplicitAny": true,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "strict": true,
    "allowSyntheticDefaultImports": true, // allow default imports for modules without default export
    "rootDirs": ["../src"],
    "baseUrl": "../src",
    "paths": {
      "src": ["src/*"]
    }
  },
  "include": ["../src/"],
  "exclude": ["../config", "node_modules", "dist"]
}
